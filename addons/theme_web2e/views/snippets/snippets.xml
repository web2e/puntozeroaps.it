    </template>
    <template id="custom_snippets_options" inherit_id="website.snippet_options" name="Custom Snippets Options">
        <xpath expr="//we-select[@data-name='mega_menu_template_opt']" position="inside">
            <t t-set="_label">Card Little icon</t>
            <we-button t-att-data-select-label="_label" data-select-template="theme_web2e.we_mega_menu_card_little_icon"
                       data-img="/website/static/src/img/snippets_thumbs/s_mega_menu_odoo_menu.svg" t-out="_label"/>
